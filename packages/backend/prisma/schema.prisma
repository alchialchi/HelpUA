datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Language {
  id       Int    @id @default(autoincrement())
  language String
  users    User[]
}

model Option {
  id     Int    @id @default(autoincrement())
  option String
  users  User[]
}

model HelpType {
  id       Int    @id @default(autoincrement())
  helpType String
  users    User[]
}

model User {
  id         Int        @id @default(autoincrement())
  userId     Int        @unique
  chatId     Int 
  language   Language   @relation(fields: [languageId], references: [id])
  languageId Int
  option     Option     @relation(fields: [optionId], references: [id])
  optionId   Int
  helpType   HelpType   @relation(fields: [helpTypeId], references: [id])
  helpTypeId Int
}
